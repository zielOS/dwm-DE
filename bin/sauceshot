#!/bin/sh

DATE=$(date +'%d-%m-%y_%H:%M:%S')
DIR="$HOME/Pictures/screenshots"
PIC="$DIR/$DATE.png"

[ ! -d "$DIR" ] && mkdir -pv "$DIR"

full() {
  maim -u "$PIC"
}

crop() {
  maim --select "$PIC"
}

view() {
  bspc desktop -f 5
  viewnior "$PIC"
}

abort() {
  dunstify -u low -a "Screenshot" -i dialog-error "Error" "something went wrong"
  exit 1
}

case "$1" in
--full)
  full || abort
  xclip -selection c -t image/png "$PIC"
  dunstify -u normal -a "Screenshot" -i "$PIC" "Copied to clipboard" "$PIC"
  view
  ;;
--crop)
  crop || abort
  xclip -selection c -t image/png "$PIC"
  dunstify -u normal -a "Screenshot" -i "$PIC" "Copied to clipboard" "$PIC"
  view
  ;;
--delay2)
  sleep 2
  full || abort
  xclip -selection c -t image/png "$PIC"
  dunstify -u normal -a "Screenshot" -i "$PIC" "Copied to clipboard" "$PIC"
  view
  ;;
esac
